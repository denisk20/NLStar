<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel styleName="categoryEditRoot">
		<g:FlowPanel styleName="menuItem">
			<g:Label text="Name:"/>
			<g:TextBox ui:field="name"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="menuItem">
			<g:Label text="Description:"/>
			<g:TextBox ui:field="description"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="menuItem">
			<g:Label text="Image:"/>
			<g:FileUpload ui:field="image"/>
		</g:FlowPanel>
		<g:HorizontalPanel spacing="5" styleName="buttons">
			<g:Button text="Save" ui:field="save"/>
			<g:Button text="Cancel" ui:field="cancel"/>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 