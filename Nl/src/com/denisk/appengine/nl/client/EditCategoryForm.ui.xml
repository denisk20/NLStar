<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:PopupPanel ui:field="popup" width="500px" height="175px" modal="true" glassEnabled="true" >
			<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_RIGHT">
				
					<g:FlowPanel width="100%" height="100%">
						<g:FlowPanel styleName="menuItem" >
							<g:Label text="Name:" />
							<g:TextBox ui:field="name" name="name" />
						</g:FlowPanel>
						<g:FlowPanel styleName="menuItem" >
							<g:Label text="Description:" />
							<g:TextBox ui:field="description" name="description" />
						</g:FlowPanel>
					</g:FlowPanel>
				<g:FormPanel height="47px" ui:field="imageForm" method="post" encoding="multipart/form-data">
					<g:FlowPanel styleName="menuItem" width="100%" height="35px">
						<g:Label text="Image:" />
						<g:FileUpload ui:field="image" name="image" />
					</g:FlowPanel>
				</g:FormPanel>
				<g:HorizontalPanel spacing="5" verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_LEFT">
					<g:Button text="Save" ui:field="save" />
					<g:Button text="Cancel" ui:field="cancel" />
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:PopupPanel>
		<g:PopupPanel ui:field="loading" modal="true" glassEnabled="true">
			<g:Image width="100%" height="100%" url="images/loading.gif" />
		</g:PopupPanel>
	</g:HTMLPanel>
</ui:UiBinder> 