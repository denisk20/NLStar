<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:PopupPanel modal="true" ui:field="popup" styleName="categoryEditRoot" glassEnabled="true" animationEnabled="true">
			<g:FormPanel width="474px" height="138px" method="post" ui:field="form" encoding="multipart/form-data">
			<g:FlowPanel width="100%" height="100%">
				<g:HorizontalPanel spacing="5" styleName="buttons">
					<g:Button text="Save" ui:field="save" />
					<g:Button text="Cancel" ui:field="cancel" />
				</g:HorizontalPanel>
				<g:FlowPanel styleName="menuItem">
					<g:Label text="Name:" />
					<g:TextBox ui:field="name" name="name" />
				</g:FlowPanel>
				<g:FlowPanel styleName="menuItem">
					<g:Label text="Description:" />
					<g:TextBox ui:field="description" name="description" />
				</g:FlowPanel>
				<g:FlowPanel styleName="menuItem">
					<g:Label text="Image:" />
					<g:FileUpload ui:field="image" name="image" />
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FormPanel>
		</g:PopupPanel>
		<g:PopupPanel ui:field="loading" modal="true">
			<g:Image width="100%" height="100%" url="images/loading.gif"/>
		</g:PopupPanel>
	</g:HTMLPanel>
</ui:UiBinder> 