<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.denisk.appengine.nl.client.ui.parts">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<g:PopupPanel ui:field="popup" width="475px" height="200px"
			animationEnabled="true" glassEnabled="true">
			<g:FormPanel height="47px" ui:field="imageForm" method="post"
				encoding="multipart/form-data" width="100%" action="/nl/persist">
				<g:VerticalPanel width="100%" height="100%"
					horizontalAlignment="ALIGN_LEFT">
				<g:TextBox ui:field="kind" name="kind" styleName="key" />
				<g:TextBox ui:field="key" name="key" styleName="key" />
				<g:TextBox ui:field="parentKey" name="parentKey" styleName="key" />
					<g:FlowPanel width="100%" height="100%">
						<g:FlowPanel styleName="menuItem" width="479px">
							<g:Label text="Name:" />
							<g:TextBox ui:field="name" name="name" />
						</g:FlowPanel>
						<g:FlowPanel styleName="menuItem" width="480px">
							<g:Label text="Description:" />
							<g:TextBox ui:field="description" name="description" />
						</g:FlowPanel>
					</g:FlowPanel>
					<d:UploadPanel ui:field="imagePanel" label="Image" name="imageBlobKey"></d:UploadPanel>
					<g:VerticalPanel ui:field="customInputs" width="100%" />
					<g:HorizontalPanel spacing="5" verticalAlignment="ALIGN_BOTTOM"
						horizontalAlignment="ALIGN_RIGHT">
						<g:Button text="Save" ui:field="save" />
						<g:Button text="Cancel" ui:field="cancel" />
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:FormPanel>
		</g:PopupPanel>
		<g:PopupPanel ui:field="loading" modal="true"
			glassEnabled="true">
			<g:Image width="100%" height="100%" url="images/loading.gif" />
		</g:PopupPanel>
	</g:HTMLPanel>
</ui:UiBinder> 