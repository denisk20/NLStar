<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
		<g:FlowPanel height="35px" styleName="menuItem" width="475px">
			<g:Label ui:field="label"/>
			<g:TextBox ui:field="flag" visible="false"/>
			<g:FlowPanel ui:field="uploadPanel">
				<g:FileUpload name="image" ui:field="image"/>
			</g:FlowPanel>
			<g:Image ui:field="imageThumbnail"/>
			<g:Label styleName="delete" text="X" ui:field="imageDeleteButton"/>
		</g:FlowPanel>
</ui:UiBinder> 